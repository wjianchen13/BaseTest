<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f0f0f0"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_launcher_test" />

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgv_test"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:background="#ffff0000"
        android:textSize="30sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="@string/dino_test"
        />

    <TextView
        android:id="@+id/tv_test_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgv_test"
        android:background="#ff00ff00"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/dino_test"
        />

    <TextView
        android:id="@+id/tv_test_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000ff"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/tv_test_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000ff"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_above="@id/tv_test_2"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_test_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000ff"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_above="@id/tv_test_3"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_test_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000ff"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_above="@id/tv_test_4"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>